# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE_PATH=logs/spacex_tracker.log

# Environment
ENVIRONMENT=development

# Frontend Configuration (for Next.js)
NEXT_PUBLIC_API_URL=http://localhost:8000
