# Database Configuration
DATABASE_URL=postgresql://spacex_user:spacex_password@localhost:5432/spacex_launches

# Redis Configuration
REDIS_URL=redis://localhost:6379/0

# Celery Configuration
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# Authentication
JWT_SECRET_KEY=your_super_secret_jwt_key_here_change_in_production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# Admin Configuration
ADMIN_USERNAME=admin
ADMIN_PASSWORD=change_this_password_in_production

# API Configuration
API_RATE_LIMIT_PER_MINUTE=60
API_CORS_ORIGINS=http://localhost:3000,https://yourdomain.com

# Scraping Configuration
SCRAPING_DELAY_MIN=1
SCRAPING_DELAY_MAX=3
SCRAPING_MAX_RETRIES=3
